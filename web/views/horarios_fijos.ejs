<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendario</title>
    <link rel="stylesheet" href="css/estilo.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
</head>

<body>
    <main>
        <aside id="menu_lateral"> <%- include('menu.ejs') %></aside>
        <div id="cont_main">
            <h1 id="text_main_horarios_fijos">Horarios fijos</h1>
            <section id="cont_horarios_fijos">



                <% results.forEach(actividad=> { %>

                    <div class="cont_horario">

                        <input type="text" data-id="<%-actividad.HorarioID -%>" class="desac">
                        <div class="cont_text">
                            <div class="cont_sub_text">
                                <h4 class="nombre_horario">
                                    <%-actividad.NombreHorario -%>
                                </h4>
                                <p class="hora">
                                    <%-actividad.HoraInicio -%>
                                </p>
                            </div>
                           
                            <p class="duracion">
                                Duracion:
                                <%-actividad.duracion -%>s
                            </p>
                        </div>

                       
                        <div class="cont_butones">

                            <button id="editar">
                                Editar</button>
                            <form action="/eliminar_horario_fijo/">

                                <button type="submit" id="eliminar">

                                    Borrar</button>
                            </form>


                        </div>

                    </div>
                    <% }) %>
                        <button id="boton_agregar">Agregar m√°s horarios</button>
            </section>
        </div>

    </main>

</body>
<form action="/agregar_horario_fijo"></form>

</html>